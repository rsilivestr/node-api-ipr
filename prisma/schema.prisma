// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          Int       @id @default(autoincrement())
  name        String?
  surname     String?
  avatar      String?
  login       String    @unique
  passwd_hash String
  createdAt   DateTime
  isAdmin     Boolean   @default(false)
  isAuthor    Boolean
  description String
  posts       Post[]
  Comment     Comment[]
}

model Category {
  id    Int    @id @default(autoincrement())
  name  String
  posts Post[]
}

model Tag {
  id    Int    @id @default(autoincrement())
  name  String
  posts Post[]
}

model Post {
  id          Int       @id @default(autoincrement())
  title       String
  body        String
  poster      String
  author      User      @relation(fields: [authorId], references: [id])
  authorId    Int
  category    Category  @relation(fields: [categoryId], references: [id])
  categoryId  Int
  tags        Tag[]
  comments    Comment[]
  isPublished Boolean
  createdAt   DateTime
  updatedAt   DateTime
  publishedAt DateTime?
}

model Comment {
  id        Int      @id @default(autoincrement())
  body      String
  createdBy User     @relation(fields: [creatorId], references: [id])
  creatorId Int
  post      Post     @relation(fields: [postId], references: [id])
  postId    Int
  createdAt DateTime
  updatedAt DateTime
}
